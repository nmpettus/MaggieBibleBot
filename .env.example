# Environment Variables for Hostinger Deployment

# Required: OpenAI API Key for biblical responses
OPENAI_API_KEY=your_openai_api_key_here

# Optional: ElevenLabs API Key for Faith voice (premium feature)
ELEVENLABS_API_KEY=your_elevenlabs_api_key_here

# Optional: Azure Speech Service (fallback voice)
AZURE_SPEECH_KEY=your_azure_speech_key_here
AZURE_SPEECH_REGION=your_azure_region_here

# Optional: Voice selection (Sara, Jenny, Aria, Ana, Emma)
AZURE_VOICE=en-US-SaraNeural

# Database URL (if using external database)
DATABASE_URL=your_database_url_here

# Node.js Environment
NODE_ENV=production

# Port (Hostinger typically uses 3000 or auto-assigned)
PORT=3000